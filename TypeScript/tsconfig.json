{
  "compilerOptions": {
    "module": "UMD",
    "target": "ES5",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "noLib": false,
    "allowJs": true,
    "sourceMap": false,
//    "declaration": true,
    "skipLibCheck": true,
    "alwaysStrict": false,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "preserveConstEnums": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
